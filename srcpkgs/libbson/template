# Template file for 'libbson'
pkgname=libbson
version=1.9.1
revision=1
build_style=gnu-configure
hostmakedepends="perl automake libtool"
short_desc="The BSON serialization library"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="Apache-2.0"
homepage="https://github.com/mongodb/libbson"
distfiles="https://github.com/mongodb/libbson/archive/${version}.tar.gz"
checksum=2d22f7914297fb7554510057223a415fc72aff1dc8ba477baa724aa4d78cfa01

pre_configure() {
	NOCONFIGURE=1 ./autogen.sh
}


libbson-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.so
		vmove usr/lib/pkgconfig
	}
}
