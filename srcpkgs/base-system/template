depends="
 base-files>=0.77 ncurses coreutils findutils diffutils dash grep gzip file sed
 less util-linux which tar man-pages shadow e2fsprogs dosfstools psmisc
 procps-ng tzdata pciutils usbutils dhcpcd kbd iproute2 iputils iw
 wpa_supplicant xbps sudo traceroute ethtool acpid eudev runit-void"

case "$XBPS_TARGET_MACHINE" in
	*-musl) depends+=" musl";;
	*) depends+=" glibc-locales";;
esac
case "$XBPS_TARGET_MACHINE" in
	i686*|x86_64*) depends+=" linux";;
esac
